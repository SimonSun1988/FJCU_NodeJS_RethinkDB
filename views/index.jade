doctype html
html(lang="en")
    head
        title= RethinkDB && express
        script(src="https://cdn.socket.io/socket.io-1.3.5.js")
        script(src="https://code.jquery.com/jquery-2.1.4.min.js")
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js")
        link(rel="stylesheet", type="text/css", href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css")

    body
        h1 Hello, Simon

        label 姓名
        input.form-control.name(placeholder='Simon')
        label 年齡
        input.form-control.age(placeholder='26')
        button.send.btn.btn-default 送出

        table.table.table-striped
            thead
                tr
                    th 姓名
                    th 年齡
            tbody.messages
                each item in people
                    tr      
                        td #{item.name}
                        td #{item.age}

        script(type='text/javascript').
            var socket = io('http://127.0.0.1:9291/');
            socket.on('newData', function (data) {
                console.log(data);
                $('.messages').append('<tr><td>' + data.name + '</td><td>' + data.age + '</td></tr>');
            });

            $('.send').click(function(e) {
                var name = $('.name').val();
                var age = $('.age').val();
                $.post( "/", { name: name, age: age });
            });

